<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StockObserverApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="q">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StockObserverApp.ItemTitle" parent="Theme.StockObserverApp">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.StockObserverApp.ItemText" parent="Theme.StockObserverApp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.StockObserverApp.TabLayout" parent="Theme.StockObserverApp">
        <item name="tabGravity">start</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="Theme.StockObserverApp.InfoText">
        <item name="background">@color/design_default_color_error</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.StockObserverApp.ImageStock">
        <item name="android:layout_width">@dimen/size_image_stock</item>
        <item name="android:layout_height">@dimen/size_image_stock</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <style name="Theme.StockObserverApp.MarkerPrice">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.StockObserverApp.MarkerText">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>